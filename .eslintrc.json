{
  "extends": "@rocketseat/eslint-config/react",
  "rules": {
    "react/display-name": "off",
    "no-useless-catch": "off",
    "camelcase": "off",
    "prettier/prettier": ["error", {
      "printWidth": 80,
      "tabWidth": 2,
      "endOfLine": "auto",
      "singleQuote": true,
      "trailingComma": "all",
      "arrowParens": "always",
      // "arrowParens": "avoid",
      "semi": true // PARA COLOCAR O ; NO FINAL, EM INGLÃŠS semicolon
    }]
  }
}